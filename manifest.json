{
  "manifest_version": 1,
  "id": "example-adapter",
  "name": "Example Adapter",
  "short_name": "Example",
  "version": "1.0.0",
  "description": "Example adapter add-on for WebThings Gateway",
  "homepage_url": "https://github.com/WebThingsIO/example-adapter",
  "license": "MPL-2.0",
  "author": "WebThingsIO",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/*.css",
    "js/*.js",
    "views/*.html"
  ],
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "1.0.0"
    }
  },
  "options": {
    "default": {
      "optionalSetting": "default value"
    },
    "schema": {
      "type": "object",
      "required": [
        "requiredSetting"
      ],
      "properties": {
        "requiredSetting": {
          "type": "string",
          "title": "A required setting"
        },
        "optionalSetting": {
          "type": "string",
          "title": "An optional setting"
        },
        "startCounter": {
          "type": "number",
          "title": "The number of starts",
          "readOnly": "true"
        }
      }
    }
  }
}
